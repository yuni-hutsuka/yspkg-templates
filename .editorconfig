# .editorconfig
# =============

# base config
# -----------

root = true

[*]
# 文字コードはutf-8
charset = utf-8
# 改行コードはlinux系
end_of_line = lf
# 行末の余分な空白は削除
trim_trailing_whitespace = true
# ファイル末に空行を挿入
insert_final_newline = true
# 半角空白でインデント
indent_style = space
# インデント幅は2
indent_size = 2

[*.tex]
# 半角空白でインデント
indent_style = space
# インデント幅は4
indent_size = 4

[Makefile]
# タブでインデント
indent_style = tab
# インデント幅は4
indent_size = 4

